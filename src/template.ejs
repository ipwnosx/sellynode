<!DOCTYPE html>
<html lang="en">
    <head>
      <title>Some Name</title>
      <meta name="description" content="Put your description here.">

      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="css/main.css">
      <script src="js/main.js" defer></script>
      <script src="https://embed.selly.gg"></script>
    </head>
    <body>
      <header class="header">
        <h1 class="title">
          <a href="/">Some Name</a>
        </h1>
      </header>
      <main>
        <div class="hero">
          Some description
        </div>
        <div class="product-list">
          <% for (const product of products) { %>
            <div class="product-item" data-selly-product="<%= product.id %>">
              <img class="image" src="<%= product.image.url %>" alt="<%= product.title %>" />
              <div class="info">
                <p class="title"><%= product.title %></p>
                <p class="price"><%= product.price %></p>
                <p class="stock"><%= product.stock %> in stock</p>
                <a class="purchase">Purchase</a>
              </div>
            </div>
          <% } %>
        </div>
      </main>
    </body>
  </html>